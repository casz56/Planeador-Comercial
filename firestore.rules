rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() { return request.auth != null; }
    function isAdmin() {
      return isSignedIn()
        && exists(/databases/$(database)/documents/Usuarios/$(request.auth.uid))
        && get(/databases/$(database)/documents/Usuarios/$(request.auth.uid)).data.role == "admin";
    }

    // Configuración: solo admin
    match /Config/{docId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // Metas por vigencia: solo admin
    match /MetasInstitucionales/{vigencia} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // Perfil usuario: se permite crear su propio doc (para “auto-provisión”)
    match /Usuarios/{uid} {
      allow read: if isSignedIn() && request.auth.uid == uid;
      allow create: if isSignedIn() && request.auth.uid == uid;
      allow update: if isAdmin();
    }

    // Estados por vigencia: cada usuario escribe lo suyo
    match /Usuarios/{uid}/State/{vigencia} {
      allow read, write: if isSignedIn() && request.auth.uid == uid;
    }
  }
}
