rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function signedIn() {
      return request.auth != null;
    }

    // ---------- USUARIOS ----------
    // Lectura: cualquier usuario autenticado (para poder consolidar producción del equipo).
    // Escritura: cada usuario sólo su propio documento, excepto admin.
    match /Usuarios/{userId} {
      allow read: if signedIn();

      allow create: if signedIn() && request.auth.uid == userId;
      allow update: if signedIn() && (request.auth.uid == userId || (get(/databases/$(database)/documents/Usuarios/$(request.auth.uid)).data.admin == true));
      allow delete: if signedIn() && (get(/databases/$(database)/documents/Usuarios/$(request.auth.uid)).data.admin == true);

      // Estado por vigencia (por usuario)
      match /State/{year} {
        allow read: if signedIn(); // permite tablero global
        allow write: if signedIn() && request.auth.uid == userId; // cada quien guarda lo suyo
      }
    }

    // ---------- CONFIG / METAS ----------
    match /Config/{docId} {
      allow read: if signedIn();
      allow write: if signedIn() && (get(/databases/$(database)/documents/Usuarios/$(request.auth.uid)).data.admin == true);
    }

    match /MetasInstitucionales/{year} {
      allow read: if signedIn();
      allow write: if signedIn() && (get(/databases/$(database)/documents/Usuarios/$(request.auth.uid)).data.admin == true);
    }

    // ---------- OPTIONAL: STATE COMPARTIDO (si lo usas más adelante) ----------
    match /StateShared/{docId} {
      allow read: if signedIn();
      allow write: if signedIn() && (get(/databases/$(database)/documents/Usuarios/$(request.auth.uid)).data.admin == true);
    }
  }
}
