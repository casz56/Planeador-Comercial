rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() { return request.auth != null; }
    function userDoc() { return get(/databases/$(database)/documents/Usuarios/$(request.auth.uid)); }
    function isActiveUser() {
      return signedIn() && userDoc().exists()
        && (userDoc().data.isActive == true || userDoc().data.isActive == null);
    }
    function isAdmin() { return isActiveUser() && userDoc().data.role == "admin"; }

    // Config / Metas (lectura autenticada, escritura admin)
    match /Config/{docId} {
      allow read: if signedIn();
      allow write: if isAdmin();
    }
    match /MetasInstitucionales/{vigencia} {
      allow read: if signedIn();
      allow write: if isAdmin();
    }

    match /Usuarios/{uid} {
      allow read: if signedIn() && (request.auth.uid == uid || isAdmin());
      allow create: if signedIn() && request.auth.uid == uid;
      allow update: if (signedIn() && request.auth.uid == uid
                        && request.resource.data.role == resource.data.role
                        && request.resource.data.isActive == resource.data.isActive)
                    || isAdmin();
      allow delete: if isAdmin();

      match /State/{vigencia} {
        // ✅ Todo autenticado puede ver producción de todos
        allow read: if signedIn();
        // ✅ Solo el dueño o admin puede escribir
        allow write: if (signedIn() && request.auth.uid == uid) || isAdmin();
      }

      match /Metas/{vigencia} {
        allow read: if signedIn();
        allow write: if (signedIn() && request.auth.uid == uid) || isAdmin();
      }
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
